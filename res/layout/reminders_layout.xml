<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
			  android:background="#ffffffff">

    <LinearLayout android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"		        
		        android:id="@+id/guide"
		        android:visibility="gone"		   
		        android:paddingTop="15dp"                   		        
		        android:orientation="vertical">
		        
	    <ImageView
	        android:layout_width="64dip"
	        android:layout_height="64dip"
	        android:layout_gravity="center_vertical|right|top"
	        android:paddingLeft="8dp"
	        android:background="#ffffffff"	                           		       
	        android:src="@drawable/ic_action_arrow_top" />
         
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical|right|top"
	        android:background="#ffffffff"
	        android:gravity="center_horizontal|center_vertical|bottom"
	        android:text="Tap to add a reminder"
	        android:textStyle="bold"
	        android:paddingRight="14dp"
	        android:textColor="#8ac90c"
	        android:textSize="25sp" />
	         

    </LinearLayout>
    		    
    <ListView android:id="@id/android:list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:choiceMode="singleChoice"
              android:listSelector="@drawable/list_selector"                  		 
    		  android:focusable="true"
    		  android:focusableInTouchMode="true"              
              />    
</LinearLayout>